<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Designchallenge.Views.AccountView"
             Title="Settings - Profile">
    <VerticalStackLayout>
        <Label 
           Text="Email"
           Margin="20, 30, 0, 0"
           FontFamily="Baloo2"/>

        <Entry 
           Margin="20, 0, 20, 0"
           Placeholder="E-Mail"
           VerticalOptions="Center"
           FontFamily="Baloo2"/>

        <Button 
            Margin="20, 10, 250, 10"
            Text="Change Email"
            FontSize="Small"
            BackgroundColor="Black"
            TextColor="White" />

        <Label 
            Text="Password"
            Margin="20, 20, 0, 0"
            FontFamily="Baloo2"/>

        <Entry 
           Margin="20, 0, 20, 0"
           Placeholder="Password"
           IsPassword="True"
           VerticalOptions="Center"
           FontFamily="Baloo2"/>

        <Button 
            Margin="20, 10, 220, 10"
            Text="Change Password"
            FontSize="Small"
            BackgroundColor="Black"
            TextColor="White" />
    </VerticalStackLayout>
</ContentPage>