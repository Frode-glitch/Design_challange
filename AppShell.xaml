<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Design_challenge.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Design_challenge"
    xmlns:pages="clr-namespace:Design_challenge.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Design_challenge">

    <ShellContent
         Title="Loading"    
         ContentTemplate="{DataTemplate pages:LoadingView}"
         Route="LoadingView" />
    
    <ShellContent
         Title="Login"
         ContentTemplate="{DataTemplate pages:LoginView}"
         Route="LoginView" />

    <ShellContent
         Title="Home"
         ContentTemplate="{DataTemplate local:MainPage}"
         Route="MainPage" />

    <ShellContent
         Title="Listing"
         ContentTemplate="{DataTemplate pages:ListingView}"
         Route="ListingView" />

    <ShellContent
         Title="Profile"
         ContentTemplate="{DataTemplate pages:ProfileView}"
         Route="ProfileView" />
</Shell>
