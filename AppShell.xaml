<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Design_challenge.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Design_challenge"
    xmlns:pages="clr-namespace:Design_challenge.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Design_challenge">

    

    <ShellContent
         Title="Loading"    
         ContentTemplate="{DataTemplate pages:LoadingView}"
         Route="LoadingView"
         Shell.FlyoutItemIsVisible="False"/>
    
    <ShellContent
         Title="Login"
         ContentTemplate="{DataTemplate pages:LoginView}"
         Route="LoginView" 
         Shell.FlyoutBehavior="Disabled"
         Shell.FlyoutItemIsVisible="False"/>


    <TabBar>
        <ShellContent
         Icon="homeicon.png"
         ContentTemplate="{DataTemplate local:MainPage}"
         Route="MainPage"
         Shell.FlyoutBehavior="Disabled"/>

        <ShellContent
         Icon="dealsicon.png"
         ContentTemplate="{DataTemplate pages:ListingView}"
         Route="ListingView" 
         Shell.FlyoutBehavior="Disabled"/>

        <ShellContent
         Icon="settingsicon.png"
         ContentTemplate="{DataTemplate pages:ProfileView}"
         Route="ProfileView"
         Shell.FlyoutBehavior="Disabled"/>
    </TabBar>
</Shell>
